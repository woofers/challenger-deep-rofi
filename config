! Location
! 1   2   3
! 8   0   4
! 7   6   5
rofi.location: 0
rofi.xoffset: 0
rofi.yoffset: 0

! "Enabled modi" Set from: Default
!rofi.modi: run

! "Window width" Set from: Default
rofi.width: 1000

! "Padding" Set from: Default
rofi.padding: 30

! "Number of lines" Set from: Default
rofi.lines: 7
rofi.line-margin: 10
rofi.line-padding: 1

! "Font to use" Set from: Default
rofi.font: "System San Francisco 13"

! Tab to Advance
rofi.kb-row-select "Tab"
rofi.kb-row-tab ""

#include "/usr/share/rofi/themes//challenger.theme"
